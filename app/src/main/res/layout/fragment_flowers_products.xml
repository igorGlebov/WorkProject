<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flowersProductsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    tools:context=".CatalogueGoodsFragment">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/points1" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="247dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="585dp"

        android:background="@drawable/flowers_products_decore" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".CatalogueServicesFragment">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="385dp"
                android:layout_height="247dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="91dp"
                android:background="@drawable/flowers_products_bouquet" />

            <ImageButton
                android:layout_width="385dp"
                android:layout_height="247dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="91dp"
                android:background="@drawable/flowers_products_artificial_wreaths" />
        </TableRow>

        <TableRow>

            <ImageButton
                android:layout_width="377dp"
                android:layout_height="247dp"
                android:layout_marginStart="0dp"
                android:background="@drawable/flowers_products_flower_baskets" />

            <ImageButton
                android:layout_width="370dp"
                android:layout_height="247dp"
                android:layout_marginStart="0dp"
                android:background="@drawable/flowers_products_living_wreaths" />
        </TableRow>

        <TableRow>


        </TableRow>
    </TableLayout>
</RelativeLayout>